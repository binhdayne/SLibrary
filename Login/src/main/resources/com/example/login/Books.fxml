<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.login.BooksController" prefWidth="800.0" prefHeight="500.0" style="-fx-background-color: #f3f4f6;">

    <!-- Title Label -->
    <Label text="Library Books" layoutX="20.0" layoutY="20.0" style="-fx-font-size: 24; -fx-font-weight: bold;" />

    <!-- TableView for Book List -->
    <TableView fx:id="table_books" layoutX="20.0" layoutY="60.0" prefWidth="760.0" prefHeight="380.0" style="-fx-background-color: white; -fx-border-color: #d1d1d1;">

        <!-- Columns for Table -->
        <columns>
            <!-- Column for Book ID -->
            <TableColumn fx:id="column_id" text="ID" prefWidth="100.0">
                <cellValueFactory>
                    <PropertyValueFactory property="id"/>
                </cellValueFactory>
            </TableColumn>

            <!-- Column for Book Title -->
            <TableColumn fx:id="column_title" text="Title" prefWidth="200.0">
                <cellValueFactory>
                    <PropertyValueFactory property="title"/>
                </cellValueFactory>
            </TableColumn>

            <!-- Column for Book Author -->
            <TableColumn fx:id="column_author" text="Author" prefWidth="150.0">
                <cellValueFactory>
                    <PropertyValueFactory property="author"/>
                </cellValueFactory>
            </TableColumn>

            <!-- Column for Genre -->
            <TableColumn fx:id="column_genre" text="Genre" prefWidth="150.0">
                <cellValueFactory>
                    <PropertyValueFactory property="genre"/>
                </cellValueFactory>
            </TableColumn>

            <!-- Column for Availability -->
            <TableColumn fx:id="column_availability" text="Availability" prefWidth="160.0">
                <cellValueFactory>
                    <PropertyValueFactory property="availability"/>
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>

    <!-- Control Buttons for Book Actions -->
    <Button text="Add Book" layoutX="20.0" layoutY="460.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 5; -fx-cursor: hand;" />
    <Button text="Edit Book" layoutX="120.0" layoutY="460.0" style="-fx-background-color: #FFA500; -fx-text-fill: white; -fx-background-radius: 5; -fx-cursor: hand;" />
    <Button text="Delete Book" layoutX="220.0" layoutY="460.0" style="-fx-background-color: #FF6347; -fx-text-fill: white; -fx-background-radius: 5; -fx-cursor: hand;" />

    <!-- Back Button -->
    <Button text="Back" fx:id="button_back" layoutX="700.0" layoutY="460.0" style="-fx-background-color: #D3D3D3; -fx-text-fill: black; -fx-background-radius: 5; -fx-cursor: hand;" />

</AnchorPane>
