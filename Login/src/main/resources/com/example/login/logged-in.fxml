<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.login.LoggedInController" prefWidth="835.0" prefHeight="520.0">

   <!-- Sidebar with Navigation -->
   <left>
      <VBox spacing="15" style="-fx-background-color: #182848; -fx-padding: 20;" prefWidth="250.0">
         <children>
            <!-- Branding Label -->
            <Label text="Slibrary" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #ff0000;" />

            <!-- Navigation Buttons -->
            <Button fx:id="button_dashboard" text="Dashboard" prefWidth="200.0" style="-fx-background-color: transparent; -fx-text-fill: #ffffff; -fx-cursor: hand;" />
            <Button fx:id="button_books" text="Books" prefWidth="200.0" style="-fx-background-color: transparent; -fx-text-fill: #ffffff; -fx-cursor: hand;" />
            <Button fx:id="button_users" text="Users" prefWidth="200.0" style="-fx-background-color: transparent; -fx-text-fill: #ffffff; -fx-cursor: hand;" />
            <Button fx:id="button_transactions" text="Transactions" prefWidth="200.0" style="-fx-background-color: transparent; -fx-text-fill: #ffffff; -fx-cursor: hand;" />
            <Button fx:id="button_settings" text="Settings" prefWidth="200.0" style="-fx-background-color: transparent; -fx-text-fill: #ffffff; -fx-cursor: hand;" />

            <!-- Logout Button -->
            <Button fx:id="buttton_logout" text="Log out" prefWidth="200.0" style="-fx-background-color: transparent; -fx-text-fill: #ff6347; -fx-font-weight: bold; -fx-cursor: hand;" />
         </children>
      </VBox>
   </left>

   <!-- Header with Search Bar -->
   <top>
      <HBox spacing="10" style="-fx-background-color: #4b6cb7; -fx-padding: 10;">
         <children>
            <!-- Application Title -->
            <Label text="Library Management System" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #ffffff;" />

            <!-- Search Field -->
            <TextField fx:id="searchField" promptText="Search for books, users..." style="-fx-background-radius: 15; -fx-border-color: #d1d1d1; -fx-border-radius: 5; -fx-pref-width: 300;" />

            <!-- Search Button -->
            <Button text="Search" style="-fx-background-color: #ff0000; -fx-text-fill: white; -fx-background-radius: 15; -fx-padding: 5 15;" />
         </children>
      </HBox>
   </top>

   <!-- Main Content Area -->
   <center>
      <AnchorPane fx:id="mainContentArea" style="-fx-background-color: #f3f4f6;">
         <children>
            <!-- Welcome Message -->
            <Label fx:id="label_welcome" layoutX="50.0" layoutY="20.0" text="Welcome back to Slibrary" style="-fx-font-size: 18; -fx-font-weight: bold;" />

            <!-- User Level Display -->
            <Label fx:id="label_levelshow" layoutX="50.0" layoutY="60.0" text="Your level is now: Beginner" style="-fx-font-size: 14;" />

            <!-- List View for Displaying Data (e.g., Books, Users, Transactions) -->
            <ListView fx:id="listView_data" layoutX="50.0" layoutY="100.0" prefHeight="300.0" prefWidth="700.0" />

            <!-- Control Buttons for Data Management -->
            <HBox spacing="10" layoutX="50.0" layoutY="420.0" alignment="CENTER_LEFT">
               <children>
                  <Button text="Add" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;" />
                  <Button text="Edit" style="-fx-background-color: #FFA500; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;" />
                  <Button text="Delete" style="-fx-background-color: #FF6347; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;" />
               </children>
            </HBox>
         </children>
      </AnchorPane>
   </center>
</BorderPane>
