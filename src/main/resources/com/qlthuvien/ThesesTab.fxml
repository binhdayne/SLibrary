<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" fx:controller="com.qlthuvien.controller_admin.UserController" spacing="10">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <!-- Top Section -->
    <Label text="User Management" style="-fx-font-size: 20px; -fx-font-weight: bold;" VBox.vgrow="NEVER"/>

    <!-- Center Section: User Table -->
    <TableView fx:id="usersTable" prefHeight="400" prefWidth="600" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="nameColumn" text="Name"/>
            <TableColumn fx:id="emailColumn" text="Email"/>
            <TableColumn fx:id="phoneColumn" text="Phone"/>
            <TableColumn fx:id="membershipIdColumn" text="Membership ID"/>
            <TableColumn fx:id="passwordColumn" text="Password"/>
            <TableColumn fx:id="usernameColumn" text="Username"/>
        </columns>
    </TableView>

    <!-- Bottom Section: User Form -->
    <VBox spacing="10">
        <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>
        <GridPane hgap="10" vgap="10">
            <Label text="Name:"/>
            <TextField fx:id="nameInput" GridPane.columnIndex="1"/>

            <Label text="Email:" GridPane.rowIndex="1"/>
            <TextField fx:id="emailInput" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Phone:" GridPane.rowIndex="2"/>
            <TextField fx:id="phoneInput" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Membership ID:" GridPane.rowIndex="3"/>
            <TextField fx:id="membershipIdInput" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="Username:" GridPane.rowIndex="4"/>
            <TextField fx:id="usernameInput" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

            <Label text="Password:" GridPane.rowIndex="5"/>
            <TextField fx:id="passwordInput" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
        </GridPane>

        <HBox spacing="10" alignment="CENTER">
            <Button text="Add User" fx:id="addUserButton" onAction="#addUser"/>
            <Button text="Edit User" fx:id="editUserButton" onAction="#editUser"/>
            <Button text="Delete User" fx:id="deleteUserButton" onAction="#deleteUser"/>
        </HBox>

        <Label fx:id="statusLabel" text="" style="-fx-text-fill: green;" />
    </VBox>
</VBox>
