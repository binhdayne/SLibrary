<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.qlthuvien.controller_admin.UserController" spacing="10" style="-fx-padding: 10;" stylesheets="@styles.css">
    <Label text="Manage Users" style="-fx-font-size: 18px;"/>

    <GridPane hgap="10" vgap="10">
        <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="nameInput" promptText="Enter user name" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="emailInput" promptText="Enter user email" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Phone:" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
        <TextField fx:id="phoneInput" promptText="Enter phone number" GridPane.columnIndex="3" GridPane.rowIndex="0"/>

        <Label text="Membership ID:" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
        <TextField fx:id="membershipIdInput" promptText="Enter membership ID" GridPane.columnIndex="3" GridPane.rowIndex="1"/>
    </GridPane>

    <HBox spacing="10">
        <Button text="Add User" onAction="#addUser"/>
        <Button text="Edit User" onAction="#editUser"/>
        <Button text="Delete User" onAction="#deleteUser"/>
    </HBox>

    <Label fx:id="statusLabel" text="Status" style="-fx-font-size: 14px; -fx-padding: 5px;"/>

    <TableView fx:id="usersTable" style="-fx-pref-height: 300px;">
        <columns>
            <TableColumn fx:id="nameColumn" text="Name" prefWidth="150" />
            <TableColumn fx:id="emailColumn" text="Email" prefWidth="200" />
            <TableColumn fx:id="phoneColumn" text="Phone" prefWidth="150" />
            <TableColumn fx:id="membershipIdColumn" text="Membership ID" prefWidth="150" />
        </columns>
    </TableView>
</VBox>
