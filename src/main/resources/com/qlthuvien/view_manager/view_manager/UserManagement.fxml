<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" 
         fx:controller="com.qlthuvien.controller_admin.UserController"
         style="-fx-background-color: #F9F9F9;">
    
    <!-- Main Content -->
    <VBox spacing="20" style="-fx-background-color: transparent;" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" 
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <!-- Header Section -->
        <HBox alignment="CENTER_LEFT" spacing="20">
            <Label text="User Management" 
                   style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2a9df4;" />
            <Region HBox.hgrow="ALWAYS" />
            <TextField fx:id="searchField" promptText="Search users..." prefWidth="250" 
                      style="-fx-background-radius: 20; -fx-padding: 8;"/>
        </HBox>

        <!-- Content Section -->
        <HBox spacing="20" VBox.vgrow="ALWAYS">
            <!-- Left Side: Table -->
            <VBox spacing="10" HBox.hgrow="ALWAYS" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                <padding>
                    <Insets top="15" right="15" bottom="15" left="15"/>
                </padding>
                
                <TableView fx:id="usersTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="nameColumn" text="Name" prefWidth="150" />
                        <TableColumn fx:id="emailColumn" text="Email" prefWidth="200" />
                        <TableColumn fx:id="phoneColumn" text="Phone" prefWidth="120" />
                        <TableColumn fx:id="membershipIdColumn" text="Membership ID" prefWidth="120" />
                        <TableColumn fx:id="usernameColumn" text="Username" prefWidth="120" />
                        <TableColumn fx:id="passwordColumn" text="Password" prefWidth="120" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
            </VBox>

            <!-- Right Side: Form -->
            <VBox spacing="15" minWidth="300" maxWidth="400" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>

                <Label text="User Details" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2a9df4;" />

                <GridPane vgap="15" hgap="10">
                    <columnConstraints>
                        <ColumnConstraints minWidth="100" />
                        <ColumnConstraints hgrow="ALWAYS" />
                    </columnConstraints>
                    
                    <Label text="Name:" style="-fx-text-fill: #666666;" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                    <TextField fx:id="nameInput" promptText="Enter name" GridPane.rowIndex="0" GridPane.columnIndex="1" />

                    <Label text="Email:" style="-fx-text-fill: #666666;" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                    <TextField fx:id="emailInput" promptText="Enter email" GridPane.rowIndex="1" GridPane.columnIndex="1" />

                    <Label text="Phone:" style="-fx-text-fill: #666666;" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                    <TextField fx:id="phoneInput" promptText="Enter phone" GridPane.rowIndex="2" GridPane.columnIndex="1" />

                    <Label text="Membership ID:" style="-fx-text-fill: #666666;" GridPane.rowIndex="3" GridPane.columnIndex="0" />
                    <TextField fx:id="membershipIdInput" promptText="Enter ID" GridPane.rowIndex="3" GridPane.columnIndex="1" />

                    <Label text="Username:" style="-fx-text-fill: #666666;" GridPane.rowIndex="4" GridPane.columnIndex="0" />
                    <TextField fx:id="usernameInput" promptText="Enter username" GridPane.rowIndex="4" GridPane.columnIndex="1" />
                    <Label text="Password:" style="-fx-text-fill: #666666;" GridPane.rowIndex="5" GridPane.columnIndex="0" />
                    <TextField fx:id="passwordInput" promptText="Enter password" GridPane.rowIndex="5" GridPane.columnIndex="1" />
                </GridPane>

                <Region VBox.vgrow="ALWAYS" />

                <!-- Action Buttons -->
                <VBox spacing="10">
                    <Button fx:id="addUserButton" onAction="#addUser" text="Add User" 
                            style="-fx-background-color: #4CAF50; -fx-text-fill: white;" maxWidth="Infinity" />
                    <Button fx:id="editUserButton" onAction="#editUser" text="Edit User"
                            style="-fx-background-color: #2196F3; -fx-text-fill: white;" maxWidth="Infinity" />
                    <Button fx:id="deleteUserButton" onAction="#deleteUser" text="Delete User"
                            style="-fx-background-color: #f44336; -fx-text-fill: white;" maxWidth="Infinity" />
                </VBox>
                
                <!-- Status Label -->
                <Label fx:id="statusLabel" style="-fx-text-fill: #4CAF50;" wrapText="true" />

            </VBox>
        </HBox>
    </VBox>

    <!-- Star Container -->
    <Pane AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" 
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        <VBox fx:id="starContainer" 
               style="-fx-background-color: transparent;"
               mouseTransparent="true" 
               pickOnBounds="false"
               HBox.hgrow="ALWAYS"/>
    </Pane>
</AnchorPane>