<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>









<BorderPane prefHeight="602.0" prefWidth="917.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.qlthuvien.controller_admin.MainController">

    <!-- Main Content Area -->
    <center>
        <VBox fx:id="contentArea" prefHeight="822.0" prefWidth="3879.0" spacing="20" style="-fx-padding: 20; -fx-background-color: #F9F9F9;" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1">
            <!-- Featured Books Section -->
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-padding: 20 0 10 0; -fx-text-fill: #333333;" text="Borrower and Storage Management!" />

            <!-- ScrollPane for the list of books -->
            <ScrollPane fx:id="scrollPane" fitToHeight="true" fitToWidth="true" style="-fx-background-color: transparent;">
            </ScrollPane>
        </VBox>

    </center>
    <top>


        <VBox prefHeight="78.0" prefWidth="918.0" style="-fx-background-color: #3498db;" BorderPane.alignment="CENTER">
            <children>
                <HBox prefHeight="50.0" prefWidth="918.0" style="-fx-background-color: #3498db;">
                    <children>
                        <Label prefHeight="34.0" prefWidth="118.0" text="    📓 Slibrary" textFill="WHITE">
                            <font>
                                <Font size="16.0" />
                            </font>
                        </Label>
                    </children>
                </HBox>
                <ButtonBar prefHeight="84.0" prefWidth="918.0" style="-fx-background-color: #3498db;">
                    <buttons>
                        <Button fx:id="btnHome" onAction="#showHomeScreen" prefHeight="12.0" prefWidth="86.0" style="-fx-background-color: #3498db;" styleClass="menu-button" text="🏠 Home">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Button>
                        <Button fx:id="btnDocuments" onAction="#showDocumentsScreen" prefHeight="0.0" prefWidth="127.0" style="-fx-background-color: #3498db;" styleClass="menu-button" text="📄 Documents">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Button>
                        <Button fx:id="btnUsers" onAction="#showUsersScreen" prefHeight="0.0" prefWidth="84.0" style="-fx-background-color: #3498db;" styleClass="menu-button" text="👤 Users">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Button>
                        <Button fx:id="btnLoans" onAction="#showLoansScreen" prefHeight="0.0" prefWidth="88.0" style="-fx-background-color: #3498db;" styleClass="menu-button" text="📖 Loans">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Button>
                        <Button fx:id="btnlogout" onAction="#showLogoutScreen" prefHeight="0.0" prefWidth="89.0" style="-fx-background-color: #3498db;" styleClass="menu-button" text="🚪 Logout">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Button>
                    </buttons>
                </ButtonBar>
            </children>
        </VBox>
    </top>
</BorderPane>



























